@model MyMusicShop.Models.ClientIndexViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Client Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Music Shop</a>
        </div>
    </nav>

    <div class="container mt-4">
        <h2>Your Music Library</h2>
        <div>
            <!-- Display user's music library -->
            @foreach (var music in Model.UserMusicLibrary)
            {
                <p>@music.Title - @music.Artist.Name - @music.Genre.Name</p>
            }
        </div>

        <h2>Music Store</h2>
        <div>
            <!-- Display general list of music -->
            @foreach (var music in Model.AllMusic)
            {
                <p>
                    @music.Title - @music.Artist.Name - @music.Genre.Name
                    <a href="@Url.Action("AddToCart", "Client", new { musicId = music.MusicId })">Add to Cart</a>
                </p>
            }
        </div>

        <h2>Cart</h2>
        <div>
            <!-- Display Cart Items -->
            <!-- Assuming you have CartItems in your ViewModel -->
            @foreach (var item in Model.CartItems)
            {
                <p>@item.Music.Title - Quantity: @item.Quantity</p>
            }
            <a href="@Url.Action("BuyMusic", "Client")">Buy Music</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
