@model MyMusicShop.Models.AdminIndexViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Music Shop Admin</a>
          
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2>Add Music</h2>
                <!-- Add Music Form -->
                <form action="/Admin/AddMusic" method="post" class="mb-4">
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Title" name="Title">
                    </div>
                    <div class="mb-3">
                        <input type="number" step="0.01" class="form-control" placeholder="Price" name="Price">
                    </div>
                    <div class="mb-3">
                        <select class="form-select" name="GenreId">
                            @foreach (var genre in ViewBag.Genres ?? Enumerable.Empty<SelectListItem>())
                            {
                                <option value="@genre.Value">@genre.Text</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <select class="form-select" name="ArtistId">
                            @foreach (var artist in ViewBag.Artists ?? Enumerable.Empty<SelectListItem>())
                            {
                                <option value="@artist.Value">@artist.Text</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Music</button>
                </form>

                <h2>Add User</h2>
                <!-- Add User Form -->
                <form action="/Admin/AddUser" method="post">
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Username" name="Username">
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" placeholder="Password" name="Password">
                    </div>
                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" id="flexCheckDefault" name="IsAdmin">
                        <label class="form-check-label" for="flexCheckDefault">Is Admin</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Add User</button>
                </form>
            </div>

            <div class="col-md-6">
                <h2>Add Genre</h2>
                <!-- Add Genre Form -->
                <form action="/Admin/AddGenre" method="post" class="mb-4">
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Genre Name" name="Name">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Genre</button>
                </form>

                <h2>Add Artist</h2>
                <!-- Add Artist Form -->
                <form action="/Admin/AddArtist" method="post">
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Artist Name" name="Name">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Artist</button>
                </form>
            </div>
        </div>

        <!-- Music List Display -->
        <div id="musicList" class="mt-4">
            <h2>Music List</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Artist</th>
                        <th>Genre</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.MusicList)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.ArtistName</td>
                            <td>@item.GenreName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
